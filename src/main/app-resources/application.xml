<?xml version="1.0" encoding="us-ascii"?>
<application xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" id="adore">
  <jobTemplates>
    <jobTemplate id="adore">
      <streamingExecutable>/application/adore/run.sh</streamingExecutable>
      <defaultParameters/>
      <defaultJobconf>
	<property id="mapred.task.timeout">9900000000</property>
      </defaultJobconf>
    </jobTemplate>
  </jobTemplates>
  <workflow id="adore_wf" title="ADORE on a sandbox" abstract="This application uses ADORE using ENVISAT ASAR data">
    <workflowVersion>1.0</workflowVersion>
    <node id="node_adore">
      <job id="adore" />
      <sources>
        <source scope="runtime" id="adore_project" title="Project Name" abstract="ADORE Project Name (e.g. LAquila)" refid="string:list"></source>
        <source scope="runtime" id="adore_master" title="ASAR master url" abstract="Define the master ASAR product to use with ADORE" refid="string:list"></source>
	<source scope="runtime" id="adore_slave" title="ASAR slave url" abstract="Define the slave ASAR product to use with ADORE" refid="string:list"></source>
      </sources>
      <parameters />
    </node>
  </workflow>
</application>
